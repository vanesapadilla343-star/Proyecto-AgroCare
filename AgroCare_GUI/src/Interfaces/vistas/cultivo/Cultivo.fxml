<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Interfaces.vistas.cultivo.CultivoController"
            style="-fx-background-color: #f0f0f0;">

    <children>
        <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
              
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- 1️⃣ Sección de título -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <VBox spacing="5">
                    <Label text="Gestión de Cultivos" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Label text="Administra tus cultivos" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                </VBox>
            </HBox>



            <!-- 2️⃣ Sección de búsqueda y tabla -->
            <VBox spacing="5" VBox.vgrow="ALWAYS" fx:id="tblContainer">
                <Label text="Total: 0 Cultivos" fx:id="lblTotalCultivos" style="-fx-font-size: 14px;"/>
                <TextField promptText="Buscar por tipo de planta o ID..." fx:id="txtBuscar" 
                           prefHeight="35" style="-fx-font-size: 14px;"/>

                <TableView fx:id="tblCultivos" prefHeight="250" VBox.vgrow="ALWAYS"> 
                    <columns> 
                        <TableColumn text="ID" fx:id="colId"/> 
                        <TableColumn text="Planta" fx:id="colPlanta"/> 
                        <TableColumn text="Fecha Siembra" fx:id="colFecha"/> 
                        <TableColumn text="Area" fx:id="colArea"/> 
                        <TableColumn text="Observación" fx:id="colObservacion"/> 
                    </columns> <!-- Ajuste automático de columnas --> 
                    <columnResizePolicy> 
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/> 
                    </columnResizePolicy> 
                </TableView>
            </VBox>
   
            <Region prefHeight="50"/>

            <!-- 3️⃣ Sección de captura y botones pegada al fondo -->
            <HBox spacing="50">
                <!-- Campos de captura -->
                <VBox spacing="15" HBox.hgrow="ALWAYS">
                    <GridPane hgap="15" vgap="15">
                        <Label text="Planta:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtPlanta" GridPane.rowIndex="0" GridPane.columnIndex="1" prefHeight="35" style="-fx-font-size: 14px;"/>

                        <Label text="Área (m²):" GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtArea" GridPane.rowIndex="0" GridPane.columnIndex="3" prefHeight="35" style="-fx-font-size: 14px;"/>

                        <Label text="Fecha Siembra:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                        <DatePicker fx:id="dpFecha" GridPane.rowIndex="1" GridPane.columnIndex="1" prefHeight="35" style="-fx-font-size: 14px;"/>

                        <Label text="Observaciones:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                        <TextArea fx:id="txtObservaciones" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3" prefRowCount="4" prefHeight="80" style="-fx-font-size: 14px;"/>
                    </GridPane>
                </VBox>


                <!-- Botones de acción -->
                <VBox spacing="15">
                    <Button text="Agregar" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="120" prefHeight="40" fx:id="btnAgregar"/>
                    <Button text="Actualizar" style="-fx-background-color: #ff7f00; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="120" prefHeight="40" fx:id="btnActualizar"/>
                    <Button text="Eliminar" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="120" prefHeight="40" fx:id="btnEliminar"/>
                    <Button text="Limpiar" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="120" prefHeight="40" fx:id="btnLimpiar"/>
                </VBox>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
