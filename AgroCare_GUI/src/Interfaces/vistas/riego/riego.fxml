<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Interfaces.vistas.riego.RiegoController"
            prefWidth="900" prefHeight="600" style="-fx-background-color: #f0f0f0;">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Título -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <VBox spacing="5">
                    <Label text="Gestión de Riegos" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    <Label text="Administra los riegos de los cultivos" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
                </VBox>
            </HBox>

            <!-- Tabla y búsqueda -->
            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <Label text="Total: 0 riegos" fx:id="lblTotalRiegos" style="-fx-font-size: 14px;"/>
                <TextField fx:id="txtBuscar" promptText="Buscar por cultivo..." prefHeight="35" style="-fx-font-size: 14px;"/>
                <TableView fx:id="tblRiegos" prefHeight="300" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="ID" fx:id="colId"/>
                        <TableColumn text="Cultivo" fx:id="colCultivo"/>
                        <TableColumn text="Fecha" fx:id="colFecha"/>
                        <TableColumn text="Cantidad (L)" fx:id="colCantidad"/>
                        <TableColumn text="Programado" fx:id="colProgramado"/>
                        <TableColumn text="Ejecutado" fx:id="colEjecutado"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <Region prefHeight="20"/>

            <!-- Formulario y botones -->
            <HBox spacing="50">
                <!-- Formulario -->
                <VBox spacing="15" HBox.hgrow="ALWAYS">
                    <GridPane hgap="15" vgap="15">
                        <!-- Programado -->
                        <Label text="Programado:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                        <ComboBox fx:id="cbProgramado" GridPane.rowIndex="0" GridPane.columnIndex="1" prefHeight="35" style="-fx-font-size: 14px;"/>

                        <!-- Cultivo -->
                        <Label text="Cultivo:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                        <ComboBox fx:id="cbCultivos" GridPane.rowIndex="1" GridPane.columnIndex="1" prefHeight="35" style="-fx-font-size: 14px;"/>

                        <!-- Cantidad -->
                        <Label text="Cantidad (L):" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtCantidad" GridPane.rowIndex="2" GridPane.columnIndex="1" prefHeight="35" style="-fx-font-size: 14px;"/>

                        <!-- Fecha -->
                        <Label text="Fecha:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                        <DatePicker fx:id="dpFecha" GridPane.rowIndex="3" GridPane.columnIndex="1" prefHeight="35" style="-fx-font-size: 14px;"/>

                        <!-- Observaciones -->
                        <Label text="Observaciones:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
                        <TextArea fx:id="txtObservaciones" GridPane.rowIndex="4" GridPane.columnIndex="1" prefHeight="35" style="-fx-font-size: 14px;" wrapText="true"/>
                    </GridPane>
                </VBox>

                
                <!-- Botones -->
                <VBox spacing="15">
                    <!-- Riego realizado -->
                    <TitledPane text="Riego realizado" collapsible="false">
                        <content>
                            <VBox alignment="CENTER" spacing="10">
                                <Button text="Marcar Ejecutado" 
                                        style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px;" 
                                        prefWidth="150" prefHeight="40" fx:id="btnMarcarEjecutado"/>
                            </VBox>
                        </content>
                    </TitledPane>

                    <!-- Otros botones -->
                    <GridPane hgap="15" vgap="15" alignment="CENTER">
                        <Button text="Agregar" 
                                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px;" 
                                prefWidth="150" prefHeight="40" fx:id="btnAgregar" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Button text="Actualizar" 
                                style="-fx-background-color: #ff7f00; -fx-text-fill: white; -fx-font-size: 14px;" 
                                prefWidth="150" prefHeight="40" fx:id="btnActualizar" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Button text="Eliminar" 
                                style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14px;" 
                                prefWidth="150" prefHeight="40" fx:id="btnEliminar" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Button text="Limpiar" 
                                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px;" 
                                prefWidth="150" prefHeight="40" fx:id="btnLimpiar" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>

            </HBox>
        </VBox>
    </children>
</AnchorPane>
