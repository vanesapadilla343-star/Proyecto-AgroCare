<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane prefHeight="600" prefWidth="800" style="-fx-background-color: #EAE9DF;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Interfaces.vistas.login.LoginController">

    <!-- CENTRO: Tarjeta centrada -->
    <center>
        <StackPane alignment="CENTER">
            <!-- Tarjeta blanca (centrada perfectamente) -->
            <VBox alignment="CENTER" maxHeight="581.0" maxWidth="512.0" prefHeight="581.0" prefWidth="512.0" spacing="25.0" style="-fx-background-color: white;                          -fx-background-radius: 15;                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 5);">
                <padding>
                    <Insets bottom="40" left="40" right="40" top="40" />
                </padding>

                <!-- Logo -->
                <HBox alignment="CENTER">
                    <Circle radius="35" style="-fx-fill: linear-gradient(to bottom, #4CAF50, #45a049);" />
                </HBox>

                <!-- Título y subtítulo -->
                <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2d5016;" text="AgroCare" />
                <Label style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Bienvenido de nuevo" />

                <!-- Campos de entrada -->
                <VBox prefWidth="280.0" spacing="15">

                    <!-- Usuario -->
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #333333; -fx-font-weight: 600;" text="Usuario" />
                        <TextField fx:id="txtUsuario" prefHeight="45" promptText="Ingresa tu usuario" style="-fx-background-color: #f5f5f5;                                           -fx-background-radius: 8;                                           -fx-border-color: transparent;                                           -fx-border-radius: 8;                                           -fx-padding: 12;                                           -fx-font-size: 14px;" />
                    </VBox>

                    <!-- Contraseña -->
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #333333; -fx-font-weight: 600;" text="Contraseña" />
                        <PasswordField fx:id="txtContrasena" prefHeight="45" promptText="Ingresa tu contraseña" style="-fx-background-color: #f5f5f5;                                               -fx-background-radius: 8;                                               -fx-border-color: transparent;                                               -fx-border-radius: 8;                                               -fx-padding: 12;                                               -fx-font-size: 14px;" />
                    </VBox>

                    <!-- Mensaje de error -->
                    <Label fx:id="lblError" maxWidth="280.0" style="-fx-text-fill: #d32f2f; -fx-font-size: 12px;" text="" visible="false" wrapText="true" />
                </VBox>

                <!-- Botón Ingresar -->
                <Button fx:id="btnIngresar" onAction="#ingresar" prefHeight="45" prefWidth="280" style="-fx-background-color: linear-gradient(to bottom, #4CAF50, #45a049);                                -fx-text-fill: white;                                -fx-font-size: 16px;                                -fx-font-weight: bold;                                -fx-background-radius: 8;                                -fx-cursor: hand;" text="Ingresar" />

                <!-- Texto adicional -->
                <Label style="-fx-text-fill: #4CAF50;                               -fx-font-size: 12px;                               -fx-cursor: hand;                               -fx-underline: true;" text="¿Olvidaste tu contraseña?" />
            </VBox>
        </StackPane>
    </center>

    <!-- PIE DE PÁGINA: texto centrado -->
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label style="-fx-text-fill: #999999; -fx-font-size: 11px;" text="AgroCare © 2025 - Sistema de Gestión Agrícola" />
        </HBox>
    </bottom>

</BorderPane>
